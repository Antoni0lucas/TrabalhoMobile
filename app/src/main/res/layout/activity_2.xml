<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <AutoCompleteTextView
        android:id="@+id/autoc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Digite o filme"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="12dp" />

    <Spinner
        android:id="@+id/spn"
        android:layout_width="168dp"
        android:layout_height="34dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="358dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:text="Selecione um filme: "
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/spn"
        app:layout_constraintVertical_bias="0.425"
        tools:layout_editor_absoluteX="13dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="357dp"
        android:layout_height="150dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/spn"
        tools:layout_editor_absoluteX="14dp">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pedra Filosofal" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camara Secreta" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prisioneiro de Askaban" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calice de fogo" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btnSelec"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Enviar" />

        <Button
            android:id="@+id/btnAvancar"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:onClick="Avancar"
            android:text="Selecionar" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>